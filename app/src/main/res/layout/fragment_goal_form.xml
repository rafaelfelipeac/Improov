<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkOne"
                android:fillViewport="true"
                tools:context=".features.goal.presentation.goalform.GoalFormFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_form_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@drawable/rounded_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_input_height"
                        android:layout_margin="@dimen/margin_regular"
                        android:hint="@string/goal_form_goal_name_hint"
                        android:textColor="@color/colorPrimary"
                        app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                        app:boxCornerRadiusBottomStart="@dimen/radius_large"
                        app:boxCornerRadiusTopEnd="@dimen/radius_large"
                        app:boxCornerRadiusTopStart="@dimen/radius_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/goal_form_goal_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textCapSentences"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_regular" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_form_single_divide_and_conquer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@drawable/rounded_background"
                    android:paddingTop="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/goal_form_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goal_form_single"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/goal_form_divide_and_conquer_info">

                    <ImageView
                            android:id="@+id/goal_form_single_image"
                            android:layout_width="@dimen/goal_form_image_size"
                            android:layout_height="@dimen/goal_form_image_size"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@mipmap/ic_medal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.501"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="@dimen/text_input_values_width"
                            android:layout_height="@dimen/text_input_height"
                            android:layout_marginTop="@dimen/margin_regular"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:hint="@string/goal_form_single_hint"
                            android:inputType="numberDecimal|numberSigned"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                            app:boxCornerRadiusBottomStart="@dimen/radius_large"
                            app:boxCornerRadiusTopEnd="@dimen/radius_large"
                            app:boxCornerRadiusTopStart="@dimen/radius_large"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/goal_form_single_image"
                            app:layout_constraintStart_toStartOf="@+id/goal_form_single_image"
                            app:layout_constraintTop_toBottomOf="@+id/goal_form_single_image">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/goal_form_single_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_regular" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goal_form_divide_and_conquer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/goal_form_divide_and_conquer_info">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            app:layout_constraintEnd_toStartOf="@+id/goal_form_divide_and_conquer_silver"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                                android:id="@+id/goal_form_divide_and_conquer_bronze_image"
                                android:layout_width="@dimen/goal_form_image_size"
                                android:layout_height="@dimen/goal_form_image_size"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@mipmap/ic_trophy_bronze"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="@dimen/text_input_values_width"
                                android:layout_height="@dimen/text_input_height"
                                android:layout_marginTop="@dimen/margin_regular"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/goal_form_bronze_hint"
                                android:inputType="numberDecimal|numberSigned"
                                app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                                app:boxCornerRadiusBottomStart="@dimen/radius_large"
                                app:boxCornerRadiusTopEnd="@dimen/radius_large"
                                app:boxCornerRadiusTopStart="@dimen/radius_large"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/goal_form_divide_and_conquer_bronze_image"
                                app:layout_constraintStart_toStartOf="@+id/goal_form_divide_and_conquer_bronze_image"
                                app:layout_constraintTop_toBottomOf="@+id/goal_form_divide_and_conquer_bronze_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/goal_form_bronze_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:nextFocusForward="@id/goal_form_silver_value"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_regular"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/goal_form_divide_and_conquer_silver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                                android:id="@+id/goal_form_divide_and_conquer_silver_image"
                                android:layout_width="@dimen/goal_form_image_size"
                                android:layout_height="@dimen/goal_form_image_size"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@mipmap/ic_trophy_silver"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="@dimen/text_input_values_width"
                                android:layout_height="@dimen/text_input_height"
                                android:layout_marginTop="@dimen/margin_regular"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/goal_form_silver_hint"
                                android:inputType="numberDecimal|numberSigned"
                                app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                                app:boxCornerRadiusBottomStart="@dimen/radius_large"
                                app:boxCornerRadiusTopEnd="@dimen/radius_large"
                                app:boxCornerRadiusTopStart="@dimen/radius_large"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/goal_form_divide_and_conquer_silver_image"
                                app:layout_constraintStart_toStartOf="@+id/goal_form_divide_and_conquer_silver_image"
                                app:layout_constraintTop_toBottomOf="@+id/goal_form_divide_and_conquer_silver_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/goal_form_silver_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:nextFocusForward="@id/goal_form_gold_value"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_regular"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/goal_form_divide_and_conquer_silver"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                                android:id="@+id/goal_form_divide_and_conquer_gold_image"
                                android:layout_width="@dimen/goal_form_image_size"
                                android:layout_height="@dimen/goal_form_image_size"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@mipmap/ic_trophy_gold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="@dimen/text_input_values_width"
                                android:layout_height="@dimen/text_input_height"
                                android:layout_marginTop="@dimen/margin_regular"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:hint="@string/goal_form_gold_hint"
                                android:inputType="numberDecimal|numberSigned"
                                app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                                app:boxCornerRadiusBottomStart="@dimen/radius_large"
                                app:boxCornerRadiusTopEnd="@dimen/radius_large"
                                app:boxCornerRadiusTopStart="@dimen/radius_large"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/goal_form_divide_and_conquer_gold_image"
                                app:layout_constraintStart_toStartOf="@+id/goal_form_divide_and_conquer_gold_image"
                                app:layout_constraintTop_toBottomOf="@+id/goal_form_divide_and_conquer_gold_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/goal_form_gold_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_regular"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goal_form_divide_and_conquer_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <TextView
                            android:id="@+id/goal_form_divide_and_conquer_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_large"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:text="@string/goal_form_divide_and_conquer_title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_large"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                            android:id="@+id/goal_form_switch_divide_and_conquer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            app:layout_constraintBottom_toBottomOf="@+id/goal_form_divide_and_conquer_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/goal_form_divide_and_conquer_title"
                            app:layout_constraintTop_toTopOf="@+id/goal_form_divide_and_conquer_title" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/goal_form_divide_and_conquest_help"
                            android:layout_width="@dimen/button_help_width"
                            android:layout_height="@dimen/button_help_height"
                            android:layout_marginEnd="@dimen/margin_regular"
                            app:layout_constraintBottom_toBottomOf="@+id/goal_form_switch_divide_and_conquer"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/goal_form_divide_and_conquer_title">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_help"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@drawable/rounded_background"
                    android:paddingBottom="@dimen/padding_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/goal_form_single_divide_and_conquer"
                    app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:id="@+id/goal_form_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:text="@string/goal_form_type_title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goal_form_type_help"
                        android:layout_width="@dimen/button_help_width"
                        android:layout_height="@dimen/button_help_height"
                        android:layout_marginEnd="@dimen/margin_regular"
                        app:layout_constraintBottom_toBottomOf="@+id/goal_form_type_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/goal_form_type_title">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_help"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RadioButton
                        android:id="@+id/goal_form_radio_type_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/goal_form_radio_type_list"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintEnd_toStartOf="@+id/goal_form_radio_type_counter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/goal_form_radio_type_counter" />

                <RadioButton
                        android:id="@+id/goal_form_radio_type_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="@string/goal_form_radio_type_counter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/goal_form_type_title"
                        app:layout_constraintVertical_bias="0.0" />

                <RadioButton
                        android:id="@+id/goal_form_radio_type_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/goal_form_radio_type_total"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintBottom_toTopOf="@+id/goal_form_goal_counter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/goal_form_radio_type_counter"
                        app:layout_constraintTop_toTopOf="@+id/goal_form_radio_type_counter" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goal_form_goal_counter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_larger"
                        android:layout_marginEnd="@dimen/margin_larger"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/goal_form_radio_type_counter"
                        app:layout_constraintVertical_bias="0.0">

                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_form_goal_counter"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="@dimen/text_input_counter_width"
                            android:layout_height="@dimen/text_input_height"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:hint="@string/goal_form_goal_counter_dec_value_hint"
                            android:inputType="numberDecimal|numberSigned"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                            app:boxCornerRadiusBottomStart="@dimen/radius_large"
                            app:boxCornerRadiusTopEnd="@dimen/radius_large"
                            app:boxCornerRadiusTopStart="@dimen/radius_large"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/goal_form_view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/goal_form_goal_counter_dec_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:nextFocusForward="@id/goal_form_goal_counter_inc_value"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_regular"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                            android:id="@+id/goal_form_view"
                            android:layout_width="@dimen/view_size"
                            android:layout_height="@dimen/view_size"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="@dimen/text_input_counter_width"
                            android:layout_height="@dimen/text_input_height"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:hint="@string/goal_form_goal_counter_inc_value_hint"
                            android:inputType="numberDecimal|numberSigned"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_large"
                            app:boxCornerRadiusBottomStart="@dimen/radius_large"
                            app:boxCornerRadiusTopEnd="@dimen/radius_large"
                            app:boxCornerRadiusTopStart="@dimen/radius_large"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/goal_form_view"
                            app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/goal_form_goal_counter_inc_value"
