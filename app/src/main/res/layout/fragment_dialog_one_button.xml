<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background">

    <ImageView
            android:id="@+id/dialogOneButtonImage"
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_larger"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@mipmap/ic_app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/dialogOneButtonMessage"
            android:layout_width="@dimen/dialog_message_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_larger"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_larger"
            android:text="@string/dialog_one_button_message"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryOne"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogOneButtonImage" />

    <android.widget.Button
            android:id="@+id/dialogOneButtonOKButton"
            android:layout_width="@dimen/button_dialog_width"
            android:layout_height="@dimen/button_dialog_height"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_larger"
            android:background="@drawable/rounded_button"
            android:text="@string/dialog_one_button_ok_message"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDarkOne"
            android:textSize="@dimen/text_size_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogOneButtonMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
