<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background">

    <ImageView
            android:id="@+id/dialogTwoButtonsImage"
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_larger"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@mipmap/ic_app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/dialogTwoButtonsMessage"
            android:layout_width="@dimen/dialog_message_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_larger"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_larger"
            android:text="@string/dialog_two_buttons_message"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryOne"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTwoButtonsImage" />

    <android.widget.Button
            android:id="@+id/dialogTwoButtonsNegativeButton"
            android:layout_width="@dimen/button_dialog_width"
            android:layout_height="@dimen/button_dialog_height"
            android:layout_marginStart="@dimen/margin_larger"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_larger"
            android:background="@drawable/rounded_button"
            android:text="@string/dialog_two_buttons_negative_message"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDarkOne"
            android:textSize="@dimen/text_size_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialogTwoButtonsView"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTwoButtonsMessage" />

    <View
            android:id="@+id/dialogTwoButtonsView"
            android:layout_width="@dimen/view_size"
            android:layout_height="@dimen/view_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.90999997" />

    <android.widget.Button
            android:id="@+id/dialogTwoButtonsPositiveButton"
            android:layout_width="@dimen/button_dialog_width"
            android:layout_height="@dimen/button_dialog_height"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_larger"
            android:layout_marginBottom="@dimen/margin_larger"
            android:background="@drawable/rounded_button"
            android:text="@string/dialog_two_buttons_positive_message"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDarkOne"
            android:textSize="@dimen/text_size_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@+id/dialogTwoButtonsView" />

</androidx.constraintlayout.widget.ConstraintLayout>
